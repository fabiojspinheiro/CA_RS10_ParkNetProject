@page
@model ParkNet_Fabio.Pinheiro.App.Pages.Permits.IndexModel

@{
    ViewData["Title"] = "Permits";
}

<h1>Permits</h1>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                License Plate
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].Park)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].Period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permit[0].Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Permit)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LicensePlate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Park)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Period)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
            </tr>
        }
    </tbody>
</table>
