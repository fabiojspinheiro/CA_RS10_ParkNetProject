@page
@model ParkNet_Fabio.Pinheiro.App.Pages.Permits.CreateModel

@{
    ViewData["Title"] = "Buy Permit";
}

<h1>Buy Permit</h1>

<h4>Permit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Permit.VehicleId" class="control-label">Vehicle</label>
                <select asp-for="Permit.VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Permit.ParkingSpaceId" class="control-label">Parking Space</label>
                <select asp-for="Permit.ParkingSpaceId" class="form-control" asp-items="ViewBag.ParkingSpaceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedPeriod" class="control-label">Period</label>
                <select asp-for="SelectedPeriod" class="form-control" asp-items="@Model.Period"></select>
            </div>
            <br />
            <div>
                <td>
                    <input type="submit" value="Buy" class="btn btn-primary" />
                    <a class="btn btn-light" asp-page="/Parks/ShowParks">Back to Parks</a>
                </td>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
