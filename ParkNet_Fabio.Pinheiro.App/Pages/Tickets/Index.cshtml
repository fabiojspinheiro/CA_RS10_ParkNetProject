@page
@model ParkNet_Fabio.Pinheiro.App.Pages.Tickets.IndexModel

@{
    ViewData["Title"] = "Tickets";
}

<h1>Tickets</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                License Plate
            </th>
            <th>
                Park
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Value
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ticket)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LicensePlate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Park)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    <a type="button" class="btn btn-danger btn-sm" asp-page="./Details" asp-route-id="@item.Id">Exit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
