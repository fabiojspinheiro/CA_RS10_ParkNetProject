@page
@model ParkNet_Fabio.Pinheiro.App.Pages.ShowParkModel
@{
    ViewData["Title"] = "All Parks";
}

<h1>All Parks</h1>

<h4>Parks</h4>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Parks[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parks[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parks[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Parks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a button type="button" class="btn btn-primary btn-sm" asp-page="./ParkLayout" asp-route-id="@item.Id">Layout</a>
                    @if(User.IsInRole("User"))
                    {
                        <a button type="button" class="btn btn-primary btn-sm" asp-page="/Permits/Create" asp-route-id="@item.Id">Buy Permit</a>
                        <a button type="button" class="btn btn-primary btn-sm" asp-page="/Tickets/Create" asp-route-id="@item.Id">Buy Ticket</a>
                    }
                    else if(User.IsInRole("Admin"))
                    {
                        <a button type="button" class="btn btn-primary btn-sm" asp-page="./EditPark" asp-route-id="@item.Id">Edit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>