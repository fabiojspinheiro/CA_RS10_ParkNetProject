@page
@model ParkNet_Fabio.Pinheiro.App.Pages.AddParkModel
@{
    ViewData["Title"] = "Add Park";
}

<h1>Add</h1>

<h4>Park</h4>
<hr />

<form method="post">
    <div class="form-group">
        <label class="control-label">Park Name</label>
        <input asp-for="Park.Name" class="form-control" />
        <span asp-validation-for="Park.Name" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <label for="AddParkTextarea">Park Layout</label>
        <textarea asp-for="Layout" class="form-control" id="AddParkTextarea" rows="10" cols="10"></textarea>
    </div>
    <br />
    <div>
        <td>
            <input type="submit" value="Add" class="btn btn-primary" />
            <a button type="button" class="btn btn-light" asp-page="./ShowParks">Back </a>
        </td>
    </div>
</form>