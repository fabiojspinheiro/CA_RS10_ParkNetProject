@page
@model ParkNet_Fabio.Pinheiro.App.Pages.UserTransactions.IndexModel

@{
    ViewData["Title"] = "Balance";
}

<div class="container-fluid">
    <h1>Balance</h1>
</div>
<div class="container-fluid">
    <h4>@Model.Balance €</h4>
</div>
<hr />
<td>
    <a button type="button" class="btn btn-success" asp-page="DepositMoney">Deposit</a>
    <a button type="button" class="btn btn-primary" asp-page="WithdrawMoney">Withdraw</a>
</td>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
            </tr>
        }
    </tbody>
</table>
