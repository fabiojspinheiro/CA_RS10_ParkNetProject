@page
@using System.Globalization
@model ParkNet_Fabio.Pinheiro.App.Pages.Admin.AllCustomersModel

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                Balance
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CustomerBalance)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    <a button type="button" class="btn btn-primary btn-sm" href="https://www.gmail.com">Send Email</a>
                </td>
            </tr>
        }
    </tbody>
</table>
